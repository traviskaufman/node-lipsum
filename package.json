{
  "author": "Travis Kaufman <travis.kaufman@gmail.com>",
  "name": "node-lipsum",
  "type": "module",
  "version": "2.0.0",
  "description": "Web service for lipsum.com",
  "keywords": [
    "Dummy Text",
    "Lorem Ipsum",
    "Lipsum",
    "Mock",
    "Fixtures"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/traviskaufman/node-lipsum"
  },
  "bin": {
    "node-lipsum": "./dist/cli.js"
  },
  "preferGlobal": true,
  "main": "./dist/lipsum.js",
  "files": [
    "dist",
    "LICENSE.txt"
  ],
  "dependencies": {
    "commander": "^14.0.2",
    "nock": "^14.0.10",
    "xml2js": "^0.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/xml2js": "^0.4.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "pretest": "npm run clean && tsc --sourceMap false --inlineSourceMap",
    "test": "vitest run",
    "dev": "tsx src/cli.ts",
    "build": "tsc && chmod +x ./dist/cli.js",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.ts": "prettier --write --ignore-unknown"
  }
}
